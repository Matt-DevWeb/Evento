@using Evento.Models;
@{
    Layout = null;
}
<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Liste des Associations</title>

</head>

<body class="container">
    <h1>Liste de toutes les associations</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l’association</th>
            </tr>
        </thead>

        @foreach (Association a in ViewData["Associations"] as List<Association>)
        {
            <tr>
                <td>@a.Id</td>
                <td>@Html.ActionLink(@a.Name, "AssociationDetails", "Association", new { id = a.Id }, null)</td>
            </tr>
        }
    </table>


</body>

</html>
