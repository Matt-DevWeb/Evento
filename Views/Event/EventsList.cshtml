@using Evento.Models;
@{
	Layout = null;
}
<!DOCTYPE html>

<html>

<head>
        <meta name="viewport" content="width=device-width" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <title>Liste des Évènements</title>

    </head>

<body class="container">
        <h1>Liste de tous les évènements</h1>
        <h2>Évènements passés</h2>
        <table class ="table">
                <thead>
		        <tr>
			        <th>Id</th>
			        <th>Nom de l’évènement</th>
                </tr>
            </thead>

            @foreach (Event e in ViewData["PastEvents"] as List<Event>)
            {
               <tr>
					<td>@e.Id</td>
                    <td>@Html.ActionLink(@e.Name, "EventDetails", "Event", new { id = e.Id }, null)</td>
               </tr>
            }
        </table>
        <h2>Évènements à venir</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de l’évènement</th>
                </tr>
            </thead>

            @foreach (Event e in ViewData["FutureEvents"] as List<Event>)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@Html.ActionLink(@e.Name, "EventDetails", "Event", new { id = e.Id }, null)</td>
                </tr>
            }
        </table>


    </body>

</html>
