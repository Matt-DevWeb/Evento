@using (Html.BeginForm())
{
    <fieldset>
        <legend>Connexion : </legend>
        <div class="mb-3">
            @Html.Label("username", "login : ", new { @class = "form-label" })
            @Html.TextBox("username", null, new { @class = "form-control", placeholder = "Entrez votre nom d'utilisateur" })
        </div>
        <div class="mb-3">
            @Html.Label("password", "mot de passe : ", new { @class = "form-label" })
            @Html.Password("password", null, new { @class = "form-control" })
        </div>
        <input type="submit" value="Se connecter" />
    </fieldset>
}
